#!/bin/bash
# chkconfig: 2345 95 05

start(){
        echo "JBOSS starting"
        su -l jboss -c 'nohup /opt/jboss/bin/run.sh & echo $! > /opt/jboss/pid'
}
stop(){
       echo "JBOSS stopping"
       pkill -9 -P $(cat /opt/jboss/pid)
}

restart(){
        stop
        sleep 5
        start
}
case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        restart
        ;;
  *)
        echo "Usage: jboss {start|stop|restart}"
exit 1
esac
exit

